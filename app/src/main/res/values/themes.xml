<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AsynTimer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AsynTimer" parent="Base.Theme.AsynTimer" />

    <style name="ToolbarTitle" parent="Base.Theme.AsynTimer">
        <item name="android:textColor">@color/font_color_dark</item>
        <item name="android:textSize">@dimen/fontSize_toolbar</item>
    </style>

    <style name="TimerUnit" parent="Base.Theme.AsynTimer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/paddingTop_timerUnit</item>
        <item name="android:paddingRight">@dimen/paddingRight_timerUnit</item>
        <item name="android:paddingBottom">@dimen/paddingBottom_timerUnit</item>
        <item name="android:paddingLeft">@dimen/paddingLeft_timerUnit</item>
        <item name="android:layout_marginTop">@dimen/marginTop_timerUnit</item>
        <item name="android:layout_marginRight">@dimen/marginRight_timerUnit</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom_timerUnit</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_timerUnit</item>

        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>

        <item name="android:background">@drawable/inputborder</item>
    </style>

    <style name="TimerTime" parent="Base.Theme.AsynTimer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/paddingLeft_timerTime</item>

        <item name="android:hint">00:00</item>
        <item name="android:textSize">@dimen/fontSize_timerTime</item>
        <item name="android:textColor">@color/font_color_dark</item>
        <item name="android:textColorHint">@color/hint_color_dark</item>
    </style>

    <style name="TimerName" parent="Base.Theme.AsynTimer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingLeft">@dimen/paddingLeftRight_timerName</item>
        <item name="android:paddingRight">@dimen/paddingLeftRight_timerName</item>
        <item name="android:layout_marginTop">@dimen/marginTop_timerName</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_timerName</item>

        <item name="android:background">@drawable/timer_name_background</item>

        <item name="android:editable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>

        <item name="android:inputType">text</item>
        <item name="android:hint">"ID"</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/fontSize_timerName</item>
        <item name="android:textColor">@color/font_color_dark</item>
        <item name="android:textColorHint">@color/hint_color_dark</item>
    </style>

    <style name="TimerSwitch" parent="Base.Theme.AsynTimer">
        <item name="android:layout_width">@dimen/size_timerButton</item>
        <item name="android:layout_height">@dimen/size_timerButton</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/marginRight_timerSwitch</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:translationY">@dimen/translateY_timerButton</item>
    </style>

    <style name="TimerReset" parent="Base.Theme.AsynTimer">
        <item name="android:layout_width">@dimen/size_timerButton</item>
        <item name="android:layout_height">@dimen/size_timerButton</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/marginRight_timerReset</item>
        <item name="android:translationY">@dimen/translateY_timerButton</item>
        <item name="android:background">@drawable/button_reset</item>
    </style>
</resources>